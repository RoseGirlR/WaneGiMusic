<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/marginSize">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/collectionButtonPadding"
            android:layout_marginRight="@dimen/collectionButtonPadding"
            android:src="@mipmap/play2"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播放全部"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/titleSize"
            android:layout_marginLeft="@dimen/marginTabSize"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right|center_vertical"
            android:layout_margin="@dimen/albumMarginSize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/collectionButtonPadding"
                android:paddingBottom="@dimen/collectionButtonPadding"
                android:paddingLeft="@dimen/collectionButtonPadding"
                android:paddingRight="@dimen/collectionButtonPadding"
                android:text=" + 收藏 10.00万 "
                android:textSize="@dimen/collectionButtonSize"
                android:textColor="@android:color/white"
                android:background="@drawable/collection_button"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/albumMarginSize"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>